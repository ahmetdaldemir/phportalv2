APP_NAME="PHP Portal"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=phportal
DB_USERNAME=phportal_user
DB_PASSWORD=phportal_password

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# MongoDB Configuration for Activity Logs
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DATABASE=phportal_logs
MONGODB_USERNAME=phportal_user
MONGODB_PASSWORD=phportal_password
MONGODB_AUTHENTICATION_DATABASE=admin

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=phportal_user
RABBITMQ_PASSWORD=phportal_password
RABBITMQ_VHOST=phportal_vhost

# Queue Configuration
QUEUE_CONNECTION=sync
QUEUE_DRIVER=sync
QUEUE_HOST=127.0.0.1
QUEUE_PORT=6379
QUEUE_DATABASE=1

# Cache Configuration
CACHE_DRIVER=file
CACHE_HOST=127.0.0.1
CACHE_PORT=6379
CACHE_DATABASE=2

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_HOST=127.0.0.1
SESSION_PORT=6379
SESSION_DATABASE=3

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Broadcast Configuration
BROADCAST_DRIVER=log

# Pusher Configuration
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# VITE Configuration
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Activity Log Configuration
ACTIVITY_LOG_ENABLED=true
ACTIVITY_LOG_DRIVER=mongodb
ACTIVITY_LOG_DATABASE=phportal_logs
ACTIVITY_LOG_COLLECTION=activity_logs

# Horizon Configuration
HORIZON_DOMAIN=
HORIZON_PATH=horizon
HORIZON_USE=0

# Scout Configuration
SCOUT_DRIVER=database

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=

# Telescope Configuration
TELESCOPE_ENABLED=true

# Timezone
APP_TIMEZONE=Europe/Istanbul

# Locale
APP_LOCALE=tr
